{
  "name": "dinestack",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "author": "Navdeepak",
  "description": "DineStack is a restaurant management software that helps you manage your orders, tables, and customers.",
  "scripts": {
    "dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "web:dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "clean": "rimraf dist",
    "backend:build": "cd backend && npm run build",
    "backend:build:desktop": "cd backend && npx prisma generate --schema=prisma/schema.desktop.prisma && npx tsc -p tsconfig.desktop.json",
    "electron:build": "npm run clean && npm run backend:build:desktop && next build && electron-builder",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "bcryptjs": "^3.0.3",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "prisma": "^6.19.2",
    "qrcode.react": "^4.2.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.dinestack.app",
    "productName": "DineStack",
    "icon": "public/assets/DineStack.png",
    "files": [
      "out/**/*",
      "public/**/*",
      "backend/dist/**/*",
      "backend/node_modules/**/*",
      "backend/prisma/**/*",
      "backend/.env",
      "main.js",
      "package.json"
    ],
    "asarUnpack": [
      "backend/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "artifactName": "DineStack Setup ${version}.exe"
    },
    "asar": true
  },
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "socket.io-client": "^4.8.3",
    "sonner": "^2.0.7"
  }
}
