generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model SuperAdmin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

enum RestaurantStatus {
  ACTIVE
  SUSPENDED
  REVOKED
}

model ActivationCode {
  id           String   @id @default(uuid())
  code         String   @unique
  entityName   String?
  plan         String
  durationDays Int
  maxTables    Int
  isUsed       Boolean  @default(false)
  status       String   @default("ACTIVE") // ACTIVE, INVALIDATED
  expiresAt    DateTime
  usedAt       DateTime?
  restaurant   Restaurant?
  restaurantId String? // Legacy field to prevent data loss
  createdAt    DateTime @default(now())
}

model Restaurant {
  id                   String           @id @default(uuid())
  name                 String
  ownerEmail           String?
  status               RestaurantStatus @default(ACTIVE)
  address              String?
  city                 String?
  phone                String?
  email                String?          // Public contact email
  isActive             Boolean          @default(true) // Deprecated, use status
  isRegistered         Boolean?         // Legacy field to prevent data loss
  forceReactivation    Boolean?         // Legacy field to prevent data loss
  subscriptionEndsAt   DateTime?
  revokedAt            DateTime?
  revokedBy            String?
  revocationReason     String?
  adminPin             String?
  kitchenPin           String?
  activationCodeId     String?          @unique
  activationCode       ActivationCode?  @relation(fields: [activationCodeId], references: [id], onDelete: SetNull)
  createdAt            DateTime         @default(now())
  devices              Device[]
  tables               Table[]
  categories           Category[]
  menuItems            MenuItem[]
  orders               Order[]
  sessions             Session[]
}

model Device {
  id           String     @id @default(uuid())
  deviceId     String     // Removed @unique - allows unlimited devices per license
  role         String
  type         String?    // Legacy field to prevent data loss
  status       String?    // Legacy field to prevent data loss
  lastSeen     DateTime?  // Legacy field to prevent data loss
  lastUsed     DateTime   @default(now())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  createdAt    DateTime   @default(now())
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String
  user      String
  target    String
  details   String
  timestamp DateTime @default(now())
}

model Table {
  id           String     @id @default(uuid())
  label        String
  capacity     Int        @default(4)
  isActive     Boolean    @default(true)
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  orders       Order[]
  sessions     Session[]
  createdAt    DateTime   @default(now())
}

model Category {
  id           String     @id @default(uuid())
  name         String
  isActive     Boolean    @default(true)
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  items        MenuItem[]
  createdAt    DateTime   @default(now())
}

model MenuItem {
  id           String      @id @default(uuid())
  name         String
  description  String?
  price        Float
  image        String?
  isActive     Boolean     @default(true)
  categoryId   String
  category     Category    @relation(fields: [categoryId], references: [id])
  restaurantId String
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  orderItems   OrderItem[]
  createdAt    DateTime    @default(now())
}

model Order {
  id           String      @id @default(uuid())
  status       String      @default("RECEIVED") // RECEIVED, PREPARING, READY, SERVED, COMPLETED, CANCELLED
  totalAmount  Float       @default(0)
  tableId      String
  table        Table       @relation(fields: [tableId], references: [id])
  restaurantId String
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  items        OrderItem[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model OrderItem {
  id         String   @id @default(uuid())
  quantity   Int      @default(1)
  notes      String?
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id])
  menuItemId String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  createdAt  DateTime @default(now())
}

model Session {
  id           String     @id @default(uuid())
  token        String     @unique
  tableId      String
  table        Table      @relation(fields: [tableId], references: [id])
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  expiresAt    DateTime
  createdAt    DateTime   @default(now())
}

